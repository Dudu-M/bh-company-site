---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/sections/PageHero.astro';
import MaterialsSection from '../../components/sections/MaterialsSection.astro';
import ProjectsGrid from '../../components/sections/ProjectsGrid.astro';
import CTASection from '../../components/ui/CTASection.astro';
import ImageStrip from '../../components/sections/ImageStrip.astro';
---

<BaseLayout title="Operations - Beth Hakkerem" description="Explore our mining operations, projects, and the high-quality materials we produce.">
  
  <!-- Hero -->
  <PageHero 
    title="Our Operations"
    subtitle="Sustainable mining operations delivering high-quality materials across the region."
    backgroundImage="/mining-2.jpg"
  />

  <!-- What We Produce -->
  <div id="materials">
  <MaterialsSection
    heading="High Quality Materials"
    materials={[
      {
        name: 'Copper',
        description: "Our copper portfolio is centered on oxide copper resources, selected for their geological accessibility, processing efficiency, and alignment with long-term copper demand. We are also advancing into higher-value copper-based materials.",
        images: [
          '/materials/copper/copper-stone-in-hand.jpg',
          '/materials/copper/copper-stone-pile.jpg',
          '/materials/copper/copper-product-tubes.jpg',
        ],
        //trustedBy: ['Company A', 'Company B'],
        buttonText: 'Explore Our Copper Profile Â»',
        buttonHref: '/materials/copper',
        buttonVariant: 'primary'
      },
      // {
      //   name: 'Gold',
      //   description: "High-purity gold extracted through sustainable practices, meeting international standards for quality and environmental responsibility.",
      //   images: [
      //     '/materials/gold-1.jpg',
      //     '/materials/gold-5.jpg',
      //     '/materials/gold-3.jpg',
      //   ],
      //   trustedBy: ['Company C', 'Company D']
      // }
    ]}
  />
  </div>

    <ImageStrip
  images={[
    { 
      src: '/materials/copper/copper-authentic.JPG', 
      alt: 'Authentic copper ore',
      caption: 'Authentic Copper Ore'
    },
    { 
      src: '/materials/copper/copper-cluster.JPG', 
      alt: 'Copper cluster formation',
      caption: 'Copper Cluster Formation'
    },
    { 
      src: '/materials/copper/copper-in-hand.jpg', 
      alt: 'Copper sample in hand',
      caption: 'Copper Sample'
    },
    { 
      src: '/materials/copper/copper-product-tubes.jpg', 
      alt: 'Copper product tubes',
      caption: 'Copper Product Tubes'
    },
    { 
      src: '/materials/copper/copper-stone-pile.jpg', 
      alt: 'Copper stone pile',
      caption: 'Copper Stone Pile'
    },
    { 
      src: '/materials/copper/carbonate-ore.jpg', 
      alt: 'Carbonate ore sample',
      caption: 'Carbonate Ore'
    },
  ]}
  background="grey"
  imageHeight="h-64"
  autoplay={true}
  interval={6000}
/>

  <!-- All Projects -->
  <div id="projects">
    <ProjectsGrid />
  </div>

  <!-- CTA -->
  <CTASection 
    title="Interested in Partnership?"
    description="Connect with us to explore collaboration opportunities in our mining operations."
    primaryButtonText="Contact Us"
    primaryButtonHref="mailto:nyabunzen@gmail.com"
  />

</BaseLayout>