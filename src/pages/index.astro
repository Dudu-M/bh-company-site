---
import Welcome from '../components/Welcome.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
import CTASection from '../components/ui/CTASection.astro';
import ImageTextSection from '../components/sections/ImageTextSection.astro';
import ValuesGrid from '../components/sections/ValuesGrid.astro';
import NewsSection from '../components/sections/NewsSection.astro';
import ImageStrip from '../components/sections/ImageStrip.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<BaseLayout title="Home - Beth Hakkerem">
<!-- Hero Section -->
<section 
  data-hero 
  class="relative min-h-[600px] md:min-h-[700px] overflow-hidden flex items-end"
>
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img 
      src="/mining.jpg" 
      alt="Mining operations" 
      class="w-full h-full object-cover"
    />
  </div>
  
  <!-- Gradient Overlay - Dark left to transparent right -->
  <div class="absolute inset-0 z-10 bg-gradient-to-r from-primary-900 via-primary-900/70 to-transparent"></div>
  
  <!-- Content -->
  <div class="container-custom relative z-20 pb-32 md:pb-40 w-full">
    <div class="max-w-2xl slide-up">
      <h1 class="mb-6 text-white">
        Powering Sustainable Mining Solutions
      </h1>
      <p class="text-xl text-neutral-100 mb-8 slide-up slide-up-delay-1">
        Driving economic growth through sustainable mine rehabilitation, greenfield development, and agricultural innovation, with every stakeholder included.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 slide-up slide-up-delay-2">
        <Button href="/operations" size="lg">Explore Operations</Button>
        <Button href="mailto:nyabunzen@gmail.com" variant="outline" size="lg" class="!text-white !border-white hover:!bg-white hover:!text-primary-900">Contact Us</Button>
      </div>
    </div>
  </div>
</section>

 <!-- Content Sections -->
<!-- Who We are Section  -->
<ImageTextSection
  imageSrc="/mining-team.JPG"
  imageAlt="Team collaboration"
  imagePosition="right"
  background="white"
  label="Who We Are"
  heading="Trusted Solutions for Economic Growth"
  buttonText="Learn More"
  buttonHref="/about"
  buttonVariant="primary"
>
  <p>
    Beth Hakkerem (BH) initiates the implementation of economic growth through strategic 
    initiatives designed to assimilate all stakeholders and their individual needs. 
    Through sustainable rehabilitation of derelict mines and mine development from 
    green fields, BH serves to provide value/wealth all encompassing of the mining and 
    agricultural initiatives. We aim to achieve community development and empowerment by encompassing 
    the informal (ASM sector).
  </p>
</ImageTextSection>

<!-- What we do Section  -->
<ImageTextSection
  imageSrc="/machine-digging.jpg"
  imageAlt="Mining equipment"
  imagePosition="left"
  background="grey"
  label="Our Expertise"
  heading="Responsible mining focused on long-term value."
  buttonText="Our Operations"
  buttonHref="/operations"
  buttonVariant="outline"
>
  <p>
    We develop and rehabilitate mining projects through sustainable practices that unlock 
    economic growth. From restoring derelict sites to developing new opportunities, we 
    work with communities, partners, and stakeholders to create shared value across the 
    mining lifecycle.
  </p>
</ImageTextSection>

<!-- Sustainability Section -->
<ImageTextSection
  imageSrc="/man-digging.jpg"
  imageAlt="Safety first"
  imagePosition="right"
  background="white"
  label="Sustainability"
  heading="Mining with care for people, land, and the future."
  buttonText="Learn More"
  buttonHref="/sustainability"
  buttonVariant="primary"
>
  <p>
    Sustainability is central to how we operate. We prioritise environmental rehabilitation, 
    responsible resource use, and community empowerment â€” ensuring mining activities leave 
    a positive, lasting impact beyond extraction.
  </p>
</ImageTextSection>

  <!-- VALUES GRID  -->
  <ValuesGrid
    background = 'dark'
    items={[
      {
        icon: 'unlock',
        title: 'Unlocking Land Through Rehabilitation',
      },
      {
        icon: 'handshake',
        title: 'Strategic Mining Partnerships',
      },
      {
        icon: 'leaf',
        title: 'Sustainable Environmental Stewardship',
      },
      {
        icon: 'shield',
        title: 'Protecting Custodians & Investors',
      }
    ]}
  />

  <!-- NEWS SECTION - Add it here -->
  <NewsSection 
    limit={9}
    layout='carousel' />

  <!-- CTA -->
  <CTASection 
    title="Ready to Start Your Project?"
    description="Get in touch with our team to discuss how we can help bring your mining vision to life."
    primaryButtonText="Get a Quote"
    secondaryButtonText="View Projects"
    secondaryButtonHref="/projects"
  />
</BaseLayout>
