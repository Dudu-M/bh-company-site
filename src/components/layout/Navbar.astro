---
const navItems = [
  { name: 'About Us', href: '/about' },
  { 
    name: 'Operations', 
    href: '/operations',
    dropdown: [
      {
        label: 'Mining Operations',
        isHeading: true
      },
      {
        name: 'All Materials',
        href: '/materials'
      },
      {
        name: 'Copper',
        href: '/materials/copper'
      },
      // {
      //   name: 'Old Copper Profile',
      //   href: '/materials/copper/copper-profile',
      // },
      // {
      //   name: 'Gold',
      //   href: '/materials/gold'
      // },
      {
        label: 'Activities',
        isHeading: true
      },
      {
        name: 'All Projects',
        href: '/operations#projects'
      }
    ]
  },
  { name: 'Sustainability', href: '/sustainability' },
  { name: 'News & Updates', href: '/news' },
  { name: 'Documents', href: '/documents' },
];

// Get base path from Astro
const base = import.meta.env.BASE_URL;

// Get current path for active state
const currentPath = Astro.url.pathname;

// Function to check if link is active
const isActive = (href: string) => {
  const fullPath = base + href.slice(1);
  if (href === '/' && currentPath === base) return true;
  if (href !== '/' && currentPath.startsWith(fullPath)) return true;
  return false;
};
---

<nav id="navbar" class="fixed w-full top-0 z-50 transition-all duration-300 bg-transparent">
  <div class="container-custom">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href={base} class="flex items-center space-x-3 group relative z-50">
        <div class="w-12 h-12 rounded-lg overflow-hidden group-hover:scale-110 transition-transform">
          <img 
            src='/bh-company-site/logo-square.jpg'
            alt="Beth Hakkerem" 
            class="w-full h-full object-cover"
          />
        </div>
        <span class="font-sans font-semibold text-xl text-white transition-colors">Beth Hakkerem</span>
      </a>

      <!-- Desktop Nav -->
      <ul class="hidden lg:flex items-center space-x-8">
        {navItems.map((item) => (
          <li class="relative group/nav">
            <a 
              href={`${base}${item.href.slice(1)}`}
              class={`nav-link font-medium transition-colors relative flex items-center gap-1 text-white ${
                isActive(item.href) 
                  ? '!text-accent-500' 
                  : 'hover:text-accent-500'
              }`}
            >
              {item.name}
              {item.dropdown && (
                <svg class="w-4 h-4 transition-transform group-hover/nav:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>

            {/* Dropdown Menu */}
            {item.dropdown && (
              <div class="dropdown-menu absolute top-full left-0 mt-2 w-56 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover/nav:opacity-100 group-hover/nav:visible transition-all duration-200 overflow-hidden">
                <div class="py-2">
                  {item.dropdown.map((subItem) => (
                    subItem.isHeading ? (
                      <div class="px-4 py-2 text-xs font-bold text-neutral-400 uppercase tracking-wider">
                        {subItem.label}
                      </div>
                    ) : (
                      <a 
                        href={`${base}${subItem.href.slice(1)}`}
                        class="block px-4 py-2 text-neutral-700 hover:bg-accent-50 hover:text-accent-500 transition-colors font-medium"
                        data-astro-reload={subItem.href.includes('#') ? true : undefined}
                      >
                        {subItem.name}
                      </a>
                    )
                  ))}
                </div>
              </div>
            )}
          </li>
        ))}
      </ul>

      <!-- CTA Button -->
      <div class="hidden lg:block">
        <a 
          href="mailto:nyabunzen@gmail.com" 
          class="inline-flex items-center px-6 py-3 bg-accent-500 text-white font-semibold rounded-lg hover:bg-accent-600 transition-all hover:scale-105"
        >
          Contact Us
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="lg:hidden p-2 text-white relative z-50">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden bg-white border-t border-neutral-200">
    <ul class="container-custom py-4 space-y-4">
      {navItems.map((item) => (
        <li>
          <a 
            href={`${base}${item.href.slice(1)}`}
            class={`mobile-link block py-2 font-medium transition-colors text-neutral-700 ${
              isActive(item.href)
                ? '!text-accent-500'
                : 'hover:text-accent-500'
            }`}
          >
            {item.name}
          </a>
          
          {/* Mobile Submenu */}
          {item.dropdown && (
            <ul class="ml-4 mt-2 space-y-2">
              {item.dropdown.map((subItem) => (
                subItem.isHeading ? (
                  <li class="text-xs font-bold text-neutral-400 uppercase tracking-wider">
                    {subItem.label}
                  </li>
                ) : (
                  <li>
                    <a 
                      href={`${base}${subItem.href.slice(1)}`}
                      class="block py-1 text-sm text-neutral-600 hover:text-accent-500 transition-colors"
                      data-astro-reload={subItem.href.includes('#') ? true : undefined}
                    >
                      {subItem.name}
                    </a>
                  </li>
                )
              ))}
            </ul>
          )}
        </li>
      ))}
      <li class="pt-4">
        <a 
          href="mailto:nyabunzen@gmail.com" 
          class="block text-center py-3 bg-accent-500 text-white font-semibold rounded-lg hover:bg-accent-600 transition-all"
        >
          Contact Us
        </a>
      </li>
    </ul>
  </div>
</nav>

<script>
  function setupNavbar() {
    const navbar = document.getElementById('navbar');
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (!navbar) return;

    // Check if page has hero section
    const hasHero = document.querySelector('[data-hero]') !== null;

    let isScrolled = false;

    function updateNavbar() {
      const scrolled = window.scrollY > 50;
      
      if (scrolled === isScrolled) return;
      isScrolled = scrolled;
      
      if (!hasHero) {
        // No hero - always dark
        navbar.classList.add('bg-primary-600', 'shadow-lg');
        navbar.classList.remove('bg-transparent');
        return;
      }

      // Has hero - toggle based on scroll
      if (scrolled) {
        navbar.classList.add('bg-primary-600', 'shadow-lg');
        navbar.classList.remove('bg-transparent');
      } else {
        navbar.classList.remove('bg-primary-600', 'shadow-lg');
        navbar.classList.add('bg-transparent');
      }
    }

    // Initial setup - run immediately
    if (!hasHero) {
      navbar.classList.add('bg-primary-600', 'shadow-lg');
      navbar.classList.remove('bg-transparent');
    } else {
      // Reset to transparent if has hero
      navbar.classList.remove('bg-primary-600', 'shadow-lg');
      navbar.classList.add('bg-transparent');
    }

    // Listen to scroll
    window.addEventListener('scroll', updateNavbar, { passive: true });
    
    // Run once on load
    updateNavbar();
  }

  // Mobile menu toggle
  function setupMobileMenu() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (!mobileMenuButton || !mobileMenu) return;
    
    // Remove any existing click handler by cloning the button
    const newButton = mobileMenuButton.cloneNode(true);
    mobileMenuButton.parentNode?.replaceChild(newButton, mobileMenuButton);
    
    // Add fresh event listener
    const button = document.getElementById('mobile-menu-button');
    button?.addEventListener('click', (e) => {
      e.preventDefault();
      const menu = document.getElementById('mobile-menu');
      menu?.classList.toggle('hidden');
    });
  }

  // Run on initial page load
  setupNavbar();
  setupMobileMenu();

  // Re-run after page navigation
  document.addEventListener('astro:page-load', () => {
    setupNavbar();
    setupMobileMenu();
  });
</script>

<style>
  /* Ensure no extra spacing */
  :global(body) {
    padding-top: 0 !important;
    margin-top: 0 !important;
  }
  
  /* Backdrop blur when dark */
  #navbar.bg-primary-600 {
    backdrop-filter: blur(8px);
  }
  
  /* Ensure nav items keep correct color */
  .nav-link:not(.text-accent-500) {
    color: white;
  }
  
  #navbar.bg-primary-600 .nav-link:not(.text-accent-500) {
    color: white;
  }

  /* Hover state - accent color */
  .nav-link:hover {
    color: #D6500D !important;
  }

  /* Dropdown styling */
  .dropdown-menu {
    transform: translateY(-10px);
  }

  .group\/nav:hover .dropdown-menu {
    transform: translateY(0);
  }
</style>