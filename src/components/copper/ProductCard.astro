---
import { ArrowRight } from 'lucide-astro';

interface Props {
  title: string;
  description: string;
  applications: string[];
  href: string;
  isSpecialty?: boolean;
}

const { title, description, applications, href, isSpecialty = false } = Astro.props;
---

<div class={`relative bg-white border-2 rounded-lg p-6 hover:shadow-lg transition-all ${isSpecialty ? 'border-accent-500' : 'border-neutral-200'}`}>
  {isSpecialty && (
    <div class="absolute -top-3 left-6 bg-accent-500 text-white px-3 py-1 text-xs font-bold rounded-full">
      OUR SPECIALTY
    </div>
  )}
  
  <h3 class="text-2xl font-bold text-neutral-900 mb-3">{title}</h3>
  
  <p class="text-neutral-700 mb-4 leading-relaxed">
    {description}
  </p>
  
  <div class="mb-6">
    <p class="text-sm font-semibold text-neutral-900 mb-2">Key Applications:</p>
    <ul class="space-y-1">
      {applications.map(app => (
        <li class="text-sm text-neutral-700 flex items-start">
          <span class="text-accent-500 mr-2">â€¢</span>
          <span>{app}</span>
        </li>
      ))}
    </ul>
  </div>
  
  <a 
    href={href}
    class="inline-flex items-center gap-2 text-accent-600 hover:text-accent-700 font-semibold transition-colors group"
  >
    Learn More
    <ArrowRight class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
  </a>
</div>