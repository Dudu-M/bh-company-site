---
interface Spec {
  parameter: string;
  specification: string;
}

interface Props {
  specs: Spec[];
  title?: string;
}

const { specs, title = "Technical Specifications" } = Astro.props;
---

<div class="bg-white rounded-lg border border-neutral-200 overflow-hidden">
  {title && (
    <div class="bg-neutral-50 px-6 py-4 border-b border-neutral-200">
      <h3 class="text-lg font-bold text-neutral-900">{title}</h3>
    </div>
  )}
  
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-neutral-50 border-b border-neutral-200">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-semibold text-neutral-900">Parameter</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-neutral-900">Specification</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-neutral-200">
        {specs.map(spec => (
          <tr class="hover:bg-neutral-50 transition-colors">
            <td class="px-6 py-4 text-sm font-medium text-neutral-900">{spec.parameter}</td>
            <td class="px-6 py-4 text-sm text-neutral-700">{spec.specification}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</div>