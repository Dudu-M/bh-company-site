---
import Button from './Button.astro';

interface Props {
  title: string;
  description: string;
  primaryButtonText?: string;
  primaryButtonHref?: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
}

const { 
  title, 
  description,
  primaryButtonText = 'Get Started',
  primaryButtonHref = '/contact',
  secondaryButtonText,
  secondaryButtonHref
} = Astro.props;
---

<section class="section-spacing bg-gradient-to-br from-primary-600 to-primary-800">
  <div class="container-custom text-center">
    <h2 class="text-white mb-6">{title}</h2>
    <p class="text-white/90 text-xl max-w-3xl mx-auto mb-8">
      {description}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <Button href={primaryButtonHref} variant="secondary" size="lg">
        {primaryButtonText}
      </Button>
      {secondaryButtonText && (
        <Button href={secondaryButtonHref} variant="outline" size="lg" class="!text-white !border-white hover:!bg-white hover:!text-primary-600">
          {secondaryButtonText}
        </Button>
      )}
    </div>
  </div>
</section>