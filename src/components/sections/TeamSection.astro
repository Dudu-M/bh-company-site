---
import { Mail, Linkedin } from 'lucide-astro';

interface TeamMember {
  name: string;
  title: string;
  image: string;
  email?: string;
  linkedin?: string;
  bio?: string;
}

interface Props {
  members: TeamMember[];
  class?: string;
}

const { members, class: className = '' } = Astro.props;
---

<section class={`section-spacing bg-white ${className}`}>
  <div class="container-custom">
    
    <div class="text-center mb-16 slide-up">
      <h2 class="text-primary-500">Our Team</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {members.map((member, index) => (
        <div 
          class="bg-neutral-50 rounded-2xl overflow-hidden hover:shadow-xl transition-all duration-300 slide-up"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Image -->
          <div class="relative aspect-[4/5] overflow-hidden">
            <img 
              src={member.image} 
              alt={member.name}
              class="w-full h-full object-cover"
            />
          </div>

          <!-- Info -->
          <div class="p-6">
            <h3 class="text-primary-500 text-xl font-bold mb-1">
              {member.name}
            </h3>
            <p class="text-accent-500 font-semibold mb-4">
              {member.title}
            </p>
            
            {member.bio && (
              <p class="text-neutral-600 text-sm mb-4 line-clamp-3">
                {member.bio}
              </p>
            )}

            <div class="flex gap-3">
              {member.email && (
                <a 
                  href={`mailto:${member.email}`}
                  class="w-10 h-10 bg-accent-500/10 rounded-lg flex items-center justify-center hover:bg-accent-500 hover:text-white transition-colors"
                >
                  <Mail class="w-5 h-5" />
                </a>
              )}
              {member.linkedin && (
                <a 
                  href={member.linkedin}
                  target="_blank"
                  class="w-10 h-10 bg-accent-500/10 rounded-lg flex items-center justify-center hover:bg-accent-500 hover:text-white transition-colors"
                >
                  <Linkedin class="w-5 h-5" />
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>