---
import { Mail, Phone, Linkedin, Download, FileText } from 'lucide-astro';
import Button from '../ui/Button.astro';

interface Props {
  name: string;
  title: string;
  email: string;
  phone: string;
  whatsapp: string;
  linkedin?: string;
  image: string;
  awardBadge?: string; 
  bio: string[];
  cvLink?: string;
  background?: 'white' | 'grey';
  class?: string;
}

const { 
  name,
  title,
  email,
  phone,
  whatsapp,
  linkedin,
  image,
  awardBadge,
  bio,
  cvLink,
  background = 'white',
  class: className = ''
} = Astro.props;

const bgClass = background === 'white' ? 'bg-white' : 'bg-neutral-50';
---

<section class={`section-spacing ${bgClass} ${className}`}>
  <div class="container-custom">
    
    <!-- Section Header -->
    <div class="text-center mb-16 slide-up">
      <h2 class="text-primary-500">Meet the Founder</h2>
    </div>

    <!-- Founder Card -->
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 items-start">
        
        <!-- Left: Image (2 columns) -->
        <!-- Left: Image (2 columns) -->
        <div class="lg:col-span-2 slide-up">
          <div class="relative aspect-[3/4] overflow-hidden rounded-2xl shadow-xl">
            <img 
              src={image} 
              alt={name}
              class="w-full h-full object-cover"
            />
            
            <!-- Award Badge Overlay -->
            {awardBadge && (
              <div class="absolute bottom-6 left-6 w-32 aspect-[3/4] rounded-xl overflow-hidden shadow-2xl ring-4 ring-white">
                <img 
                    src={awardBadge} 
                    alt="Award"
                    class="w-full h-full object-cover"
                />
              </div>
            )}
          </div>
        </div>

        <!-- Right: Info (3 columns) -->
        <div class="lg:col-span-3 slide-up slide-up-delay-1">
          
          <!-- Name, Title, LinkedIn | Contact Info -->
          <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-6 mb-8 pb-8 border-b border-neutral-200">
            
            <!-- Left: Name & Title & LinkedIn -->
            <div>
              <h4 class="text-primary-500 text-3xl md:text-4xl font-bold mb-2">
                {name}
              </h4>
              <p class="text-accent-500 text-xl font-semibold mb-4">
                {title}
              </p>
              
              {linkedin && (
                <a 
                  href={linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-primary-500 hover:text-accent-500 transition-colors font-medium"
                >
                  <Linkedin class="w-5 h-5" />
                  LinkedIn Profile
                </a>
              )}
            </div>

            <!-- Right: Contact Info -->
            <div class="flex flex-col gap-3">
              <a 
                href={`mailto:${email}`}
                class="flex items-center gap-3 text-neutral-600 hover:text-accent-500 transition-colors"
              >
                <Mail class="w-5 h-5 text-accent-500 flex-shrink-0" />
                <span class="text-sm md:text-base">{email}</span>
              </a>
              
              <a 
                href={`https://wa.me/${whatsapp.replace(/\D/g, '')}`}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-3 text-neutral-600 hover:text-accent-500 transition-colors"
              >
                <svg class="w-5 h-5 text-accent-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
                <span class="text-sm md:text-base">{phone}</span>
              </a>
            </div>

          </div>
          

          <!-- Bio -->
          <div class="space-y-4 mb-8">
            {bio.map(paragraph => (
              <p class="text-neutral-600 text-lg leading-relaxed">
                {paragraph}
              </p>
            ))}
          </div>

          <!-- CV Download -->
          {cvLink && (
            <div class="flex flex-col sm:flex-row gap-4">
              <Button
                href={cvLink}
                variant="outline"
                size="md"
                class="!rounded-full"
              >
                <FileText class="w-5 h-5" />
                View CV for more
              </Button>
              <Button 
                href={cvLink}
                variant="primary"
                size="md"
                class="!rounded-full"
              >
                <Download class="w-5 h-5 mr-2" />
                Download CV
              </Button>
            </div>
          )}

        </div>

      </div>
    </div>

  </div>
</section>