---
import { Calendar } from 'lucide-astro';

interface NewsArticle {
  slug: string;
  data: {
    title: string;
    date: Date;
    excerpt: string;
    image: string;
    category?: string;
  };
}

interface Props {
  articles: NewsArticle[];
  class?: string;
}

const { articles, class: className = '' } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    month: 'long',
    day: 'numeric',
    year: 'numeric'
  }).format(date);
};
---

<section class={`section-spacing bg-white ${className}`}>
  <div class="container-custom">
    
    <!-- Header -->
    <div class="mb-12 slide-up">
      <p class="text-accent-500 font-semibold text-lg mb-3 uppercase tracking-wide">
        Spotlight
      </p>
      <h2 class="text-primary-500">Featured Stories</h2>
    </div>

    <!-- Spotlight Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {articles.map((article, index) => (
        <a 
          href={`/news/${article.slug}`}
          class="group slide-up"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <article class="h-full">
            
            <!-- Image -->
            <div class="relative h-80 overflow-hidden rounded-2xl mb-6">
              <img 
                src={article.data.image} 
                alt={article.data.title}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
              {article.data.category && (
                <div class="absolute top-4 left-4">
                  <span class="inline-block px-4 py-2 bg-accent-500 text-white rounded-full text-sm font-semibold">
                    {article.data.category}
                  </span>
                </div>
              )}
            </div>

            <!-- Content -->
            <div>
              <!-- Date -->
              <div class="flex items-center gap-2 text-neutral-500 text-sm mb-3">
                <Calendar class="w-4 h-4" />
                <time datetime={article.data.date.toISOString()}>
                  {formatDate(article.data.date)}
                </time>
              </div>

              <!-- Title -->
              <h3 class="text-2xl font-semibold text-primary-500 mb-3 group-hover:text-accent-500 transition-colors line-clamp-2">
                {article.data.title}
              </h3>

              <!-- Excerpt -->
              <p class="text-neutral-600 line-clamp-3">
                {article.data.excerpt}
              </p>
            </div>

          </article>
        </a>
      ))}
    </div>

  </div>
</section>