---
interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: string;
  class?: string;
}

const { 
  title, 
  subtitle,
  backgroundImage = '/mining.jpg',
  class: className = ''
} = Astro.props;
---

<section class={`relative min-h-[400px] md:min-h-[500px] flex items-center overflow-hidden ${className}`}>
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img 
      src={backgroundImage} 
      alt={title}
      class="w-full h-full object-cover"
    />
  </div>
  
  <!-- Gradient Overlay -->
  <div class="absolute inset-0 z-10 bg-gradient-to-r from-primary-900/80 via-primary-900/50 to-primary-900/50"></div>
  
  <!-- Content - Centered -->
  <div class="container-custom relative z-20 text-center">
    <div class="max-w-4xl mx-auto slide-up">
      <h1 class="text-white mb-6 !text-white">
        {title}
      </h1>
      {subtitle && (
        <p class="text-xl md:text-2xl text-neutral-100 max-w-3xl mx-auto slide-up slide-up-delay-1">
          {subtitle}
        </p>
      )}
    </div>
  </div>
</section>